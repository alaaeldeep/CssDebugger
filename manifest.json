{
    "manifest_version": 3,
    "name": "CSS Debugger",
    "version": "1.0",
    "description": "Toggle CSS outlines and other debugging overlays.",
    "icons": {
        "128": "icon.png"
    },
    "action": {
        "default_icon": {
            "128": "icon.png"
        },
        "default_popup": "popup.html",
        "default_title": "CSS Debugger"
    },
    "permissions": ["scripting", "activeTab", "storage"],
    "background": {
        "service_worker": "background.js"
    },
    "commands": {
        "toggle-debugger": {
            "suggested_key": {
                "default": "Ctrl+Shift+O"
            },
            "description": "Toggle CSS Debugger"
        }
    }
}
